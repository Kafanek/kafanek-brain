{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html/wp-content/plugins/kafanek-brain": "${workspaceFolder}"
            },
            "log": true
        },
        {
            "name": "Debug Kafanek Brain Current File",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "env": {
                "KAFANEK_DEBUG": "1",
                "WP_DEBUG": "1"
            }
        }
    ]
}
